void inorder(Node* root, vector<int> &v){
    if(root!=NULL){
        // return NULL;
    
    inorder(root->left, v);
    v.push_back(root->data);
    inorder(root->right, v);
    }
    return;
}
float findMedian(struct Node *root)
{
      //Code here
      vector<int> v;
      inorder(root, v);
      int n = v.size();
      if(n%2 == 0){
          return ((float)v[n/2]+(float)v[n/2-1])/2;
      }
      
      else{
          return v[n/2];
      }
}
